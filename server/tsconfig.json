{
  "compilerOptions": {
    "module": "ESNext",
    "strict": true,
    "baseUrl": "./",
    "outDir": "build",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  }
}